<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('./partials/links') %>
    <title>Add Blog</title>
  </head>
  <body style="background-color: #e4e2e6">
    <%- include('./partials/nav') %>
    <div class="container mt-5 w-75">
      <h3 class="text-center mt-3">Add Blog</h3>
      <% if(blogSuccess.length) { %>
      <div class="alert alert-success" role="alert"><%=blogSuccess %></div>
      <%} %> <% if(error.length) { %>
      <div class="alert alert-danger" role="alert"><%=error %></div>
      <%} %>

      <form action="/add-blog" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label class="form-label" for="title">Title</label>
          <input
            type="text"
            name="title"
            class="form-control"
            id="title"
            aria-describedby="title"
            placeholder="Title"
            required
          />
        </div>

        <div data-mdb-input-init class="form-outline mt-3">
          <label class="form-label" for="description">Description</label>
          <textarea
            class="form-control"
            name="description"
            id="description"
            rows="4"
            placeholder="Description"
            required
          ></textarea>
        </div>

        <div class="form-group mt-3">
          <label class="form-label" for="title">Cover Image</label>
          <input
            type="file"
            name="coverImage"
            class="form-control"
            id="coverImage"
            aria-describedby="coverImage"
            placeholder="coverImage"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary mt-5 w-100">Add</button>
      </form>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
